<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<display-name>savapage-server</display-name>

    <servlet>
        <servlet-name>JsonRpcServlet</servlet-name>
        <servlet-class>org.savapage.server.jsonrpc.JsonRpcServlet</servlet-class>     
    </servlet>
    <servlet-mapping>
        <servlet-name>JsonRpcServlet</servlet-name>
        <url-pattern>/jsonrpc</url-pattern>
    </servlet-mapping>

	<servlet>
		<servlet-name>XmlRpcServlet</servlet-name>
		<!-- 
		SpXmlRpcServlet extends org.apache.xmlrpc.webserver.XmlRpcServlet
		 -->
        <servlet-class>org.savapage.server.xmlrpc.SpXmlRpcServlet</servlet-class>		
		<init-param>
			<!-- Sets, whether the servlet supports vendor extensions for XML-RPC. -->
			<param-name>enabledForExtensions</param-name>
			<param-value>true</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>XmlRpcServlet</servlet-name>
		<url-pattern>/xmlrpc</url-pattern>
	</servlet-mapping>

	<!-- There are three means to configure Wickets configuration mode and they 
		are tested in the order given. 1) A system property: -Dwicket.configuration 
		2) servlet specific <init-param> 3) context specific <context-param> The 
		value might be either "development" (reloading when templates change) or 
		"deployment". If no configuration is found, "development" is the default. -->

	<servlet>
		<servlet-name>cometd</servlet-name>
		<servlet-class>org.cometd.server.CometdServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
        <async-supported>true</async-supported>     
	</servlet>
	<servlet-mapping>
		<servlet-name>cometd</servlet-name>
		<url-pattern>/cometd/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>initializer</servlet-name>
		<servlet-class>org.savapage.server.cometd.BayeuxInitializer</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>savapage-docs</servlet-name>
		<servlet-class>org.savapage.server.SpDocsServlet</servlet-class>
		<load-on-startup>4</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>savapage-docs</servlet-name>
		<url-pattern>/docs/*</url-pattern>
	</servlet-mapping>

<!-- 
	<servlet>
		<servlet-name>SavaPage</servlet-name>
		<servlet-class>org.savapage.server.SpServlet</servlet-class>
		<load-on-startup>3</load-on-startup>
	</servlet>
 -->
 
	<filter>
		<filter-name>wicket.savapage</filter-name>
		<filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
		<init-param>
			<param-name>applicationClassName</param-name>
			<param-value>org.savapage.server.WebApp</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>wicket.savapage</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<session-config>
		<session-timeout>20</session-timeout>
	</session-config>

	<listener>
		<listener-class>org.savapage.server.SpContextListener</listener-class>
	</listener>

</web-app>
